{
  "name": "vscode-fast-cpp",
  "displayName": "vscode-fast-cpp",
  "description": "fast open a cpp code without download others!",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.104.0"
  },
  "publisher": "maomao",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:cpp",
    "onLanguage:c",
    "onCommand:maomao.compile",
    "onCommand:maomao.hello",
    "onCommand:xq.debug"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Maomao C++",
      "properties": {
        "maomao.gpp": {
          "type": "string",
          "default": "",
          "description": "g++ 绝对路径（插件自动填充）"
        },
        "maomao.debugInputFile": {
          "type": "string",
          "default": "",
          "description": "Path to a file redirected to program stdin while debugging (leave empty to disable). 调试时用于标准输入重定向的文件路径，留空表示不启用。"
        }
      }
    },
    "commands": [
      {
        "command": "maomao.compile",
        "title": "compile C++"
      },
      {
        "command": "maomao.hello",
        "title": "Say Hello"
      },
      {
        "command": "xq.debug",
        "title": "GDB调试"
      }
    ],
    "keybindings": [
      {
        "command": "maomao.compile",
        "key": "ctrl+shift+B",
        "when": "true"
      },
      {
        "command": "maomao.hello",
        "key": "ctrl+f5",
        "when": "true"
      },
      {
        "command": "xq.debug",
        "key": "ctrl+f6",
        "when": "true"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus && (resourceLangId == cpp || resourceLangId == c)",
          "command": "maomao.compile",
          "group": "navigation"
        },
        {
          "when": "editorFocus",
          "command": "maomao.hello",
          "group": "navigation"
        },
        {
          "when": "editorFocus",
          "command": "xq.debug",
          "group": "navigation"
        }
      ]
    },
    
    "debuggers": [
      {
        "type": "xq_cppdbg",
        "label": "C++ Debugger",
        "program": "./out/debug/DebugAdapterC++.js",
        "runtime": "node",
        "languages": ["cpp", "c"],
        "configurationAttributes": {
          "launch": {
            "required": ["program"],
            "properties": {
              "program": {
                "type": "string",
                "description": "要调试的可执行文件路径"
              },
              "cwd": {
                "type": "string",
                "description": "工作目录"
              },
              "stopAtEntry": {
                "type": "boolean",
                "default": true,
                "description": "是否在程序入口处停止"
              },
              "stdinFile": {
                "type": "string",
                "description": "Path to a text file forwarded to the debuggee via stdin. 调试时将该文本文件内容重定向到标准输入。"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "name": "C++ Debugger",
            "type": "xq_cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/a.exe",
            "cwd": "${workspaceFolder}",
            "stopAtEntry": true,
            "stdinFile": "${workspaceFolder}/input.txt"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/7zip-min": "^1.3.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/tar": "^6.1.13",
    "7zip-min": "^2.1.0",
    "jszip": "^3.10.1",
    "tar": "^7.5.1",
    "unzipper": "^0.12.3"
  }
}
